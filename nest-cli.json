{
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "assets": [
      {
        "include": "**/*.hbs",
        "watchAssets": true
      }
    ]
  },
  "projects": {
    "core": {
      "type": "library",
      "root": "core",
      "entryFile": "index",
      "sourceRoot": "core/src",
      "compilerOptions": {
        "tsConfigPath": "core/tsconfig.lib.json"
      }
    }
  }
}